<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.music_player.Activity.MainActivity">

    <!--显示歌曲、艺术家-->
    <LinearLayout
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/main_title"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#00000000"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/main_artist"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#00000000"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"/>
    </LinearLayout>
    <!--音量控制-->
    <SeekBar
        android:id="@+id/voiceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:background="@color/black"
        android:thumb="@drawable/voice"/>

    <!--音乐列表 以后改成歌词显示-->
   <ListView
       android:id="@+id/myListView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/voiceSeekBar"
       android:layout_above="@+id/playingSeek">

   </ListView>

    <!--播放进度条和时间-->
    <LinearLayout
        android:id="@+id/playingSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/controlBar"
        android:background="@color/black">
        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="00:00"/>
        <SeekBar
            android:id="@+id/playingSeekBar"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:background="#00000000"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/duration"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="00:00"
            android:paddingRight="10dip"/>


    </LinearLayout>

    <!--播放控制栏-->
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">
        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_previous"/>
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_play_main"
            android:layout_margin="10dip"/>
        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_stop"/>
        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_next"
            android:layout_margin="10dip"/>

    </LinearLayout>
</RelativeLayout>
